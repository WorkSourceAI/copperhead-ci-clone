# Copperhead Consulting Inc - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# BACKEND CONFIGURATION
# ============================================

# MongoDB Connection (Atlas or Local)
MONGO_URL=mongodb://localhost:27017/copperhead

# Server Port (auto-assigned in production)
PORT=8001

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Backend API URL
VITE_BACKEND_URL=https://your-domain.emergent.host

# Application Name
VITE_APP_NAME=Copperhead Consulting Inc

# Environment
VITE_ENVIRONMENT=production

# ============================================
# OPTIONAL: Analytics & Tracking
# ============================================

# Google Analytics ID (optional)
VITE_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
VITE_GTM_ID=GTM-XXXXXXX